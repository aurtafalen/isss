<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SI.InspeksiAwal"
    android:id="@+id/inspeksiawal">

    <FrameLayout
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

<!--        <androidx.appcompat.widget.AppCompatButton-->
<!--            android:id="@+id/btnback"-->
<!--            android:layout_width="30dp"-->
<!--            android:layout_height="30dp"-->
<!--            android:background="@drawable/back_icon"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:layout_marginLeft="20dp"-->
<!--            tools:layout_editor_absoluteX="16dp"-->
<!--            tools:layout_editor_absoluteY="10dp" />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inspeksi"
            android:textColor="@color/abucard"
            android:textSize="25dp"
            android:layout_gravity="center" />
    </FrameLayout>

<!--    <TextView-->
<!--        android:id="@+id/textView5"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="."-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        tools:layout_editor_absoluteY="60dp" />-->



    <TextView
        android:id="@+id/titleInspeksi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:singleLine="true"
        android:maxLines="1"
        android:layout_marginTop="10dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:textColor="@color/abucard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleInspeksi"
        app:layout_constraintVertical_bias="0.204">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constrain"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:layout_margin="20dp"
                app:cardBackgroundColor="@color/cardAbu"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="@id/constrain"
                app:layout_constraintStart_toStartOf="@id/constrain"
                app:layout_constraintTop_toTopOf="@id/constrain">

                <TextView
                    android:id="@+id/cuaca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:text="Cuaca" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="Tanggal"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="35dp"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:id="@+id/tglView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:text="Tanggal" />

                    <!--            <Button-->
                    <!--                android:id="@+id/btnTgl"-->
                    <!--                android:layout_width="40dp"-->
                    <!--                android:layout_height="40dp"-->
                    <!--                android:layout_gravity="right"-->
                    <!--                android:background="@drawable/next_icon" />-->

                </androidx.cardview.widget.CardView>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:layout_margin="20dp"
                app:cardBackgroundColor="@color/cardAbu"
                app:cardCornerRadius="10dp"

                app:layout_constraintEnd_toEndOf="@id/constrain"
                app:layout_constraintStart_toStartOf="@id/constrain"
                app:layout_constraintTop_toBottomOf="@+id/cardView">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="Diinspeksi Oleh"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="35dp"
                    app:cardCornerRadius="10dp">

                    <!--            <Spinner-->
                    <!--                android:id="@+id/filterteam"-->
                    <!--                android:layout_width="match_parent"-->
                    <!--                android:layout_height="wrap_content"-->
                    <!--                android:layout_gravity="center"-->
                    <!--                />-->

                    <TextView
                        android:id="@+id/filterteam"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingStart="15dp" />

                </androidx.cardview.widget.CardView>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView4"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_margin="20dp"
                app:cardBackgroundColor="@color/cardAbu"
                app:cardCornerRadius="10dp"

                app:layout_constraintEnd_toEndOf="@id/constrain"
                app:layout_constraintStart_toStartOf="@id/constrain"
                app:layout_constraintTop_toBottomOf="@+id/cardView2">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/lokasiTraining_text_input"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/cardpertanyaanputih"
                    app:layout_constraintEnd_toEndOf="@id/constrain"
                    app:layout_constraintStart_toStartOf="@id/constrain"
                    app:layout_constraintTop_toBottomOf="@+id/cardView2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/alamatEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Alamat" />

                </com.google.android.material.textfield.TextInputLayout>


            </androidx.cardview.widget.CardView>




            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="10dp"
                android:layout_margin="20dp"
                app:cardBackgroundColor="@color/cardAbu"
                app:cardCornerRadius="10dp"
                app:layout_constraintHorizontal_bias="0.516"
                app:layout_constraintEnd_toEndOf="@id/constrain"
                app:layout_constraintStart_toStartOf="@id/constrain"
                app:layout_constraintTop_toBottomOf="@+id/cardView4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="Lokasi"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="70dp"
                    android:layout_marginTop="40dp"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:id="@+id/hasilLokasi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:hint="Kordinat" />

                    <TextView
                        android:id="@+id/alamat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="10dp"
                        android:hint="Alamat"
                        android:maxLines="3"
                        android:textSize="12dp" />


                </androidx.cardview.widget.CardView>


                <Button
                    android:id="@+id/btnlokasi"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/lokasi_icon"
                    android:elevation="10dp" />
            </androidx.cardview.widget.CardView>


            <Button
                android:id="@+id/btnnext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_margin="20dp"
                android:elevation="10dp"
                android:text="Lanjut"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="@id/constrain"
                app:layout_constraintHorizontal_bias="0.521"
                app:layout_constraintEnd_toEndOf="@id/constrain"
                app:layout_constraintStart_toStartOf="@id/constrain"
                app:layout_constraintTop_toBottomOf="@+id/cardView3"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>