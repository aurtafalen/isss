<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SI.InspeksiKetiga"
    android:id="@+id/inspeksiketiga">

<!--    <ProgressBar-->
<!--        android:id="@+id/cirlce"-->
<!--        android:layout_width="100dp"-->
<!--        android:layout_height="match_parent"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="parent" />-->

    <FrameLayout
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inspeksi"
            android:textColor="@color/abucard"
            android:textSize="25dp"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/next_icon"
            android:backgroundTint="@color/abucard"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/berikutnya"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Berikutnya"
            android:textColor="@color/abucard"
            android:layout_gravity="right"
            android:gravity="center"
            android:layout_marginRight="30dp"/>

        <TextView
            android:id="@+id/panahback"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/back_icon"
            android:backgroundTint="@color/abucard"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/kembali"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Kembali"
            android:textColor="@color/abucard"
            android:layout_gravity="left"
            android:gravity="center"
            android:layout_marginLeft="30dp"/>

    </FrameLayout>
    <TextView
        android:id="@+id/qTitile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Bagian isi"
        android:gravity="center"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/nPage"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="1"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.967"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qTitile" />

    <TextView
        android:id="@+id/jPage"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text=""
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/qTitile" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="/"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qTitile" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.183">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/lPertanyaan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </androidx.appcompat.widget.LinearLayoutCompat>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

